{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2015", "es2016", "es2020", "esnext.asynciterable"],
    "module": "commonjs",
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es2017"
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["__mocks__/**", "dist/**"]
}
